---
import "@/styles/globals.css";
import Navbar from "@/components/layout/Navbar";
import Footer from "@/components/layout/Footer";
import { Toaster } from "@/components/ui/toaster";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Sanper Beschattungssysteme - Premium Pergolen & Wintergärten",
  image = "/og-image.png"
} = Astro.props;

const siteUrl = Astro.site?.toString() || "https://www.sanper.de";
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const ogImageURL = new URL(image, siteUrl).toString();
const isProduction = process.env.CONTEXT === 'production';

// Organization Schema
const organizationSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Sanper Beschattungssysteme",
  "legalName": "Sanper Beschattungssysteme GmbH",
  "url": "https://www.sanper.de",
  "logo": "https://www.sanper.de/logo.png",
  "description": "Maßgefertigte bioklimatische Pergolen, Wintergärten und Markisen. Premium Qualität direkt vom Hersteller.",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Am Sandtorkai 1",
    "addressLocality": "Hamburg",
    "postalCode": "20457",
    "addressCountry": "DE"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+49-40-123-456-78",
    "contactType": "customer service",
    "availableLanguage": ["German"]
  },
  "sameAs": []
});

// WebSite Schema
const websiteSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Sanper Beschattungssysteme",
  "url": "https://www.sanper.de",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://www.sanper.de/?s={search_term_string}",
    "query-input": "required name=search_term_string"
  }
});
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Preload LCP Hero Image -->
    <link rel="preload" as="image" href="https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?w=1920&h=1080&fit=crop" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:url" content={canonicalURL.toString()} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Sanper Beschattungssysteme" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <title>{title}</title>
    <link rel="canonical" href={canonicalURL} />
    {!isProduction && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={organizationSchema} />
    <script type="application/ld+json" set:html={websiteSchema} />
  </head>
  <body>
    <!-- 
      Navbar logic usually requires client-side state for mobile menu, 
      so we load it on client. 
    -->
    <Navbar client:load />
    
    <slot />
    
    <Footer />
    <Toaster client:load />
    <script src="../lib/scroll-animation.js"></script>
  </body>
</html>

