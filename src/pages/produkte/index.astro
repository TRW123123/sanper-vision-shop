---
import Layout from "@/layouts/Layout.astro";
import ProdukteList from "@/components/pages/ProdukteList";

const metaDescription = "Entdecken Sie unser umfassendes Sortiment: Pergola-Systeme, Verglasungssysteme, Textile Beschattung, Transparente Schutzsysteme und Innenraum-Lösungen.";
---

<Layout 
  title="Produkte – Sanper Gölgelendirme Systeme"
  description={metaDescription}
>
  <!-- 
      We use client:load because ProdukteList has search state. 
      However, for SEO, the initial render (without search) is what matters. 
      Astro will SSR the initial state. client:load hydrates it.
  -->
  <ProdukteList client:load />
</Layout>
